<div id="app" v-cloak data-key="Customer:Read">
    <div v-if="pageLoading">
        <div>Loading...</div>
        <indoloading />
    </div>
    <div v-else>
        <h4>@ViewBag.Title</h4>

        <div class="row">
            <!-- Vendor Card -->
            <div class="col-md-3 mb-4">
                <div class="card bg-primary text-white text-center">
                    <div class="card-body">
                        <i class="bi bi-briefcase" style="font-size: 2rem;"></i>
                        <h5 class="card-title mt-2">Vendors</h5>
                        <p class="card-text display-6">{{ vendors.length }}</p>
                    </div>
                </div>
            </div>

            <!-- Customer Card -->
            <div class="col-md-3 mb-4">
                <div class="card bg-success text-white text-center">
                    <div class="card-body">
                        <i class="bi bi-people" style="font-size: 2rem;"></i>
                        <h5 class="card-title mt-2">Customers</h5>
                        <p class="card-text display-6">{{ customers.length }}</p>
                    </div>
                </div>
            </div>

            <!-- Vendor Contact Card -->
            <div class="col-md-3 mb-4">
                <div class="card bg-warning text-white text-center">
                    <div class="card-body">
                        <i class="bi bi-telephone" style="font-size: 2rem;"></i>
                        <h5 class="card-title mt-2">Vendor Contacts</h5>
                        <p class="card-text display-6">{{ vendorContacts.length }}</p>
                    </div>
                </div>
            </div>

            <!-- Customer Contact Card -->
            <div class="col-md-3 mb-4">
                <div class="card bg-danger text-white text-center">
                    <div class="card-body">
                        <i class="bi bi-person-lines-fill" style="font-size: 2rem;"></i>
                        <h5 class="card-title mt-2">Customer Contacts</h5>
                        <p class="card-text display-6">{{ customerContacts.length }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pie Chart -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card text-center">
                    <div class="card-header">
                        <h4>Pie Contacts per Customer</h4>
                    </div>
                    <div class="card-body">
                        <div ref="pieChart" style="width:100%;height:100%;min-width:400px;min-height:300px;"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card text-center">
                    <div class="card-header">
                        <h4>Pie Contacts per Vendor</h4>
                    </div>
                    <div class="card-body">
                        <div ref="ringChart" style="width:100%;height:100%;min-width:400px;min-height:300px;"></div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Gauge Chart -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card text-center">
                    <div class="card-header">
                        <h4>Gauge Customer Contact</h4>
                    </div>
                    <div class="card-body">
                        <div ref="gaugeChartCustomer" style="width:100%;height:100%;min-width:400px;min-height:300px;"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card text-center">
                    <div class="card-header">
                        <h4>Gauge Vendor Contact</h4>
                    </div>
                    <div class="card-body">
                        <div ref="gaugeChartVendor" style="width:100%;height:100%;min-width:400px;min-height:300px;"></div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Bar Chart -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card text-center">
                    <div class="card-header">
                        <h4>Bar Contacts per Customer</h4>
                    </div>
                    <div class="card-body">
                        <div ref="barChartCustomer" style="width:100%;height:100%;min-width:600px;min-height:400px;"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card text-center">
                    <div class="card-header">
                        <h4>Bar Contacts per Vendor</h4>
                    </div>
                    <div class="card-body">
                        <div ref="barChartVendor" style="width:100%;height:100%;min-width:600px;min-height:400px;"></div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>


